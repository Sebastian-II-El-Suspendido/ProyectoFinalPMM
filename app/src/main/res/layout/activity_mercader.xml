<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondomercader"
    tools:context=".MercaderActivity">

    <LinearLayout
        android:id="@+id/mercader2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bordemarcos"
            android:fontFamily="@font/silk_bold"
            android:gravity="center"
            android:padding="10dp"
            android:text="Espero que tengas preparado el oro para los excluisivos articulos que te voy a mostrar."
            android:textColor="#404040"
            android:textSize="12sp" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="300dp"
            android:layout_height="410dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/mercader2" />

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/chatanimation2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.127"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mercader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="300dp"
            android:layout_height="410dp">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/mercader" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/GifChat"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/chatanimation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.909"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView14"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bordemarcos"
            android:fontFamily="@font/silk_bold"
            android:gravity="center"
            android:padding="10dp"
            android:text="Muestrame que tienes, pero no esperes que pague demasiado por los desechos que me traes que llamas articulos."
            android:textColor="#404040"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutVender"
        android:layout_width="300dp"
        android:layout_height="380dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/bordemarcos"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/silk_bold"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="Vender"
            android:textColor="#404040"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/baston" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/buttonatras"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="80dp"
                android:src="@drawable/flecha_atra" />

            <ImageView
                android:id="@+id/buttonadelante"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/flecha_adelante" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textNombre"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bordemarcos"
                android:fontFamily="@font/silk_bold"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#404040"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textTipo"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bordemarcos"
                android:fontFamily="@font/silk_bold"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#404040"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textPeso"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bordemarcos"
                android:fontFamily="@font/silk_bold"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#404040"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button13"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="30dp"
                android:backgroundTint="#6B8096"
                android:fontFamily="@font/silk_bold"
                android:text="Vender Objeto"
                android:textColor="#404040"
                android:textSize="8sp" />

            <Button
                android:id="@+id/button14"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#6B8096"
                android:fontFamily="@font/silk_bold"
                android:text="@string/butonAtras"
                android:textColor="#404040"
                android:textSize="8sp" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutComprar"
        android:layout_width="300dp"
        android:layout_height="380dp"
        android:layout_marginStart="19dp"
        android:background="@drawable/bordemarcos"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.454">

        <TextView
            android:id="@+id/textViewV1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/silk_bold"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="Comprar"
            android:textColor="#404040"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageViewV2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/baston" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/buttonatrasV"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="80dp"
                android:src="@drawable/flecha_atra" />

            <ImageView
                android:id="@+id/buttonadelanteV"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/flecha_adelante" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4V"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textNombreV"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bordemarcos"
                android:fontFamily="@font/silk_bold"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#404040"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textTipoV"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bordemarcos"
                android:fontFamily="@font/silk_bold"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#404040"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textPesoV"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bordemarcos"
                android:fontFamily="@font/silk_bold"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#404040"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button13V"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="30dp"
                android:backgroundTint="#6B8096"
                android:fontFamily="@font/silk_bold"
                android:text="Comprar Objeto"
                android:textColor="#404040"
                android:textSize="8sp" />

            <Button
                android:id="@+id/button14V"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#6B8096"
                android:fontFamily="@font/silk_bold"
                android:text="@string/butonAtras"
                android:textColor="#404040"
                android:textSize="8sp" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/ComprarBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#6B8096"
        android:fontFamily="@font/silk_bold"
        android:gravity="center"
        android:text="Comprar"
        android:textColor="#404040"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/VenderBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/VenderBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#6B8096"
        android:fontFamily="@font/silk_bold"
        android:gravity="center"
        android:text="Vender"
        android:textColor="#404040"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@+id/ComprarBtn"
        app:layout_constraintEnd_toStartOf="@+id/CancelarBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ComprarBtn" />

    <Button
        android:id="@+id/CancelarBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#6B8096"
        android:fontFamily="@font/silk_bold"
        android:gravity="center"
        android:text="Cancelar"
        android:textColor="#404040"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@+id/VenderBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/VenderBtn" />

    <Button
        android:id="@+id/ComerciarBtn"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#6B8096"
        android:fontFamily="@font/silk_bold"
        android:gravity="center"
        android:text="Comerciar"
        android:textColor="#404040"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ContinuarBtn"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#6B8096"
        android:fontFamily="@font/silk_bold"
        android:gravity="center"
        android:text="Continuar"
        android:textColor="#404040"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@+id/ComerciarBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ComerciarBtn" />

    <include
        layout="@layout/ajustes"/>


</androidx.constraintlayout.widget.ConstraintLayout>