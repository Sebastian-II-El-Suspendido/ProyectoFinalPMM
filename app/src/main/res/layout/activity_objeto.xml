<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoobjeto"
    tools:context=".ObjetoActivity">


    <ImageView
        android:id="@+id/imgCiudad"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="88dp"
        android:src="@drawable/amuleto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.479"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRecoger"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="184dp"
        android:backgroundTint="#6B8096"
        android:fontFamily="@font/silk_bold"
        android:gravity="center"
        android:text="Recoger"
        android:textColor="#404040"
        app:cornerRadius="50dp"
        android:background="@drawable/botonredondo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.925" />

    <Button
        android:id="@+id/btnContinuarObj"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#6B8096"
        android:fontFamily="@font/silk_bold"
        android:gravity="center"
        android:text="Continuar"
        android:textColor="#404040"
        app:cornerRadius="50dp"
        android:background="@drawable/botonredondo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.354"
        app:layout_constraintStart_toEndOf="@+id/btnRecoger"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.925" />

    <TextView
        android:id="@+id/textViewObjDesc"
        android:layout_width="230dp"
        android:layout_height="250dp"
        android:layout_marginStart="28dp"
        android:background="@drawable/bordemarcos"
        android:fontFamily="@font/silk_bold"
        android:gravity="center"
        android:text="Te adentras en una profunda mazmorra, tras númerosas trampas y enemigos, consigues llegar a una sala del tesoro. Recoge los objetos que consideres, pero recuerda que tienes un espacio límitado"
        android:textColor="#404040"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.304" />

    <include
        layout="@layout/ajustes"/>
</androidx.constraintlayout.widget.ConstraintLayout>