<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fondocreado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonajeCreadoActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="385dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bordemarcos"
        android:gravity="center"
        android:orientation="vertical"
        android:outlineAmbientShadowColor="#3D4D5C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.968"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/silk_bold"
            android:gravity="center"
            android:text="@string/Raz"
            android:textColor="#404040"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/RazaPersonaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/silk_bold"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#404040"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/silk_bold"
            android:gravity="center"
            android:text="@string/Clas"
            android:textColor="#404040"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ClasePersonaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/silk_bold"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#404040"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/silk_bold"
            android:gravity="center"
            android:text="@string/EstV"
            android:textColor="#404040"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/EstadoVitalPersonaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/silk_bold"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#404040"
            android:textSize="20sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="186dp"
        android:layout_height="201dp"
        android:background="@drawable/guerrero_maldito_adulto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.627" />

    <TextView
        android:id="@+id/NombrePersonaje"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/bordemarcos"
        android:fontFamily="@font/silk_bold"
        android:gravity="center"
        android:hint="@string/HintTextNombre"
        android:inputType="text"
        android:maxWidth="200dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="#404040"
        android:textColorHint="#404040"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#6B8096"
        android:fontFamily="@font/silk_bold"
        android:gravity="center"
        android:text="@string/butonenxt"
        android:textColor="#404040"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#6B8096"
        android:gravity="center"
        android:fontFamily="@font/silk_bold"
        android:textColor="#404040"
        android:layout_marginTop="32dp"
        android:text="@string/butonAtras"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include layout="@layout/ajustes" />
</androidx.constraintlayout.widget.ConstraintLayout>